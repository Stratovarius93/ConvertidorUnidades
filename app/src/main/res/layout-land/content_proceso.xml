<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_cardview"
    android:paddingRight="@dimen/padding_cardview"
    android:paddingBottom="@dimen/padding_cardview"
    android:paddingTop="@dimen/padding_cardview"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.astudios.aristosstudios.convertidorunidades.proceso"
    tools:showIn="@layout/activity_proceso">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/opciones"
        android:elevation="5dp"
        card_view:cardCornerRadius="5dp"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout1">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card1"
                android:layout_alignParentStart="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/sublayout1"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/padding_land">
                    <Spinner
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/padding_land"
                        android:layout_width="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_height="wrap_content"
                        android:id="@+id/magnitud"
                        android:layout_below="@+id/textView"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/seleccione_magnitud"
                        android:id="@+id/textView"
                        android:textColor="@color/colorAccent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/view"
                        android:id="@+id/divider1"
                        android:layout_below="@id/magnitud"
                        android:background="@color/divider"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card2"
                android:layout_below="@+id/card1"
                android:layout_alignParentStart="true" >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layout2"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/padding_land">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/de"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/textView2"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:textStyle="bold" />
                    <Spinner
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/padding_land"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/unidad"
                        android:layout_below="@+id/textView2"
                        android:layout_alignParentStart="true" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/view"
                        android:id="@+id/divider2"
                        android:layout_below="@+id/unidad"
                        android:background="@color/divider"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view5"
                android:layout_below="@+id/card2"
                android:layout_alignParentStart="true" >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/padding_land"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/padding_land">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/a"
                        android:id="@+id/textView3"
                        android:textColor="@color/colorAccent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:textStyle="bold" />
                    <Spinner
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/unidad2"
                        android:layout_below="@+id/textView3"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>
