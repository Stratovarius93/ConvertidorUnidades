<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".keyboard"
    tools:showIn="@layout/activity_keyboard">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="@dimen/dimen_border"
        android:paddingBottom="@dimen/dimen_border"
        android:id="@+id/view"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        >

        <me.grantland.widget.AutofitTextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/pantalla"
            android:layout_marginRight="76dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="0"
            android:textSize="@dimen/numero_boton"
            android:textColor="@color/fondo"
            android:visibility="visible"
            android:layout_alignParentBottom="false"
            android:layout_alignWithParentIfMissing="false"
            android:textIsSelectable="true"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:cursorVisible="false"
            android:editable="true"
            android:ems="10"
            android:inputType="number|numberSigned|numberDecimal" />

        <ImageButton
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/eliminar"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/pantalla"
            android:src="@mipmap/ic_backspace_white_24dp"
            android:longClickable="false" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divider"
        android:layout_below="@+id/view"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/divider"
        android:layout_marginBottom="60sp"
        android:id="@+id/view2"
        android:weightSum="3"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_width="@dimen/alto_boton"
                    android:layout_height="@dimen/alto_boton"
                    android:id="@+id/numero1"
                    android:textSize="@dimen/numero_boton"
                    android:textColor="@color/fondo"
                    android:text="1"
                     />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:textColor="@color/fondo"
                    android:layout_width="@dimen/alto_boton"
                    android:layout_height="@dimen/alto_boton"
                    android:id="@+id/numero4"
                    android:textSize="@dimen/numero_boton"
                    android:text="4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:textColor="@color/fondo"
                    android:layout_width="@dimen/alto_boton"
                    android:layout_height="@dimen/alto_boton"
                    android:id="@+id/numero7"
                    android:textSize="@dimen/numero_boton"
                    android:text="7"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:textColor="@color/fondo"
                    android:layout_width="@dimen/alto_boton"
                    android:layout_height="@dimen/alto_boton"
                    android:id="@+id/punto"
                    android:textSize="@dimen/numero_boton"
                    android:text="." />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_width="@dimen/alto_boton"
                    android:layout_height="@dimen/alto_boton"
                    android:id="@+id/numero2"
                    android:textSize="@dimen/numero_boton"
                    android:textColor="@color/fondo"
                    android:text="2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_width="@dimen/alto_boton"
                    android:layout_height="@dimen/alto_boton"
                    android:textColor="@color/fondo"
                    android:id="@+id/numero5"
                    android:textSize="@dimen/numero_boton"
                    android:text="5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:textColor="@color/fondo"
                    android:layout_width="@dimen/alto_boton"
                    android:layout_height="@dimen/alto_boton"
                    android:id="@+id/numero8"
                    android:textSize="@dimen/numero_boton"
                    android:text="8" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:textColor="@color/fondo"
                    android:layout_width="@dimen/alto_boton"
                    android:layout_height="@dimen/alto_boton"
                    android:id="@+id/numero0"
                    android:textSize="@dimen/numero_boton"
                    android:text="0"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_width="@dimen/alto_boton"
                    android:layout_height="@dimen/alto_boton"
                    android:id="@+id/numero3"
                    android:textSize="@dimen/numero_boton"
                    android:textColor="@color/fondo"
                    android:text="3" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_width="@dimen/alto_boton"
                    android:layout_height="@dimen/alto_boton"
                    android:textColor="@color/fondo"
                    android:id="@+id/numero6"
                    android:textSize="@dimen/numero_boton"
                    android:text="6" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:textColor="@color/fondo"
                    android:layout_width="@dimen/alto_boton"
                    android:layout_height="@dimen/alto_boton"
                    android:id="@+id/numero9"
                    android:textSize="@dimen/numero_boton"
                    android:text="9"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:textColor="@color/fondo"
                    android:layout_width="@dimen/alto_boton"
                    android:layout_height="@dimen/alto_boton"
                    android:id="@+id/negativo"
                    android:textSize="@dimen/numero_boton"
                    android:text="+/-" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
